<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" applicationDPI="160" 
			   currentState="{AppController.instance.currentState}" 
			   initialize="preInit(event)" frameRate="40"
			   creationComplete="init(event)" xmlns:states="com.mightybits.hack.bubblepop.view.states.*" backgroundAlpha="0" backgroundColor="0x000000">
	
	<fx:Script>
		<![CDATA[
			import com.mightybits.hack.bubblepop.core.AppController;
			import com.mightybits.hack.bubblepop.core.AppModel;
			import com.mightybits.hack.bubblepop.core.AppServices;
			import com.mightybits.hack.bubblepop.data.Theme;
			
			import mx.events.FlexEvent;
			
			import assets.Assets;
			
			protected function preInit(event:FlexEvent):void
			{
				AppModel.screenWidth = this.width;
				AppModel.screenHeight = this.height;
			}
			
			protected function init(event:FlexEvent):void
			{	
				var farm:Theme = new Theme();
				farm.words = ["Bird", "Chicken", "Pig", "Barn", "Cloud", "Lake", "Grass", "Tree"];
				farm.backgroundAsset = "FarmBackGroundAsset";
				farm.bubbleAssets = ["BalloonAsset1","BalloonAsset2","BalloonAsset3","BalloonAsset4"];
				
				AppModel.farmTheme = farm;
				
				var ocean:Theme = new Theme();
				ocean.words = ["Seal", "Fish", "Octopus", "Crab", "Shark", "Turtle", "Clam", "Whale", "Starfish"];
				ocean.backgroundAsset = "OceanBackGroundAsset";
				ocean.bubbleAssets = ["BubbleAsset"];
				
				AppModel.ocenaTheme = ocean;
				Assets.prepareSounds();
				
				trace("Screen: ", AppModel.screenWidth, AppModel.screenHeight);
				
				AppServices.getServiceToken(onTokenSuccess, onTokenFail);
				
				function onTokenSuccess():void
				{
					AppController.instance.changeState("home");
				}
				
				function onTokenFail():void
				{
					
				}	
			}
			
			
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>

	<s:states>
		<s:State name="loading" />
		<s:State name="home" />
		<s:State name="game" />
	</s:states>
	
	<states:Home includeIn="home" />
	<states:Game includeIn="game" />
	
	
</s:Application>
