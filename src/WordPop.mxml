<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" applicationDPI="160" 
			   currentState="{AppController.instance.currentState}" 
			   initialize="preInit(event)" frameRate="30"
			   creationComplete="init(event)" xmlns:states="com.mightybits.hack.bubblepop.view.states.*">
	
	<fx:Script>
		<![CDATA[
			import com.mightybits.hack.bubblepop.core.AppController;
			import com.mightybits.hack.bubblepop.core.AppModel;
			import com.mightybits.hack.bubblepop.core.AppServices;
			
			import mx.events.FlexEvent;
			
			protected function preInit(event:FlexEvent):void
			{
				AppModel.screenWidth = this.width;
				AppModel.screenHeight = this.height;
			}
			
			protected function init(event:FlexEvent):void
			{	
				trace("Screen: ", AppModel.screenWidth, AppModel.screenHeight);
				
				AppServices.getServiceToken(onTokenSuccess, onTokenFail);
				
				function onTokenSuccess():void
				{
					AppController.instance.changeState("home");
				}
				
				function onTokenFail():void
				{
					
				}	
			}
			
			
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>

	<s:states>
		<s:State name="loading" />
		<s:State name="home" />
		<s:State name="game" />
	</s:states>
	
	<states:Home includeIn="home" />
	<states:Game includeIn="game" />
	
	
</s:Application>
