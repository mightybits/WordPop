<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" width="100%" height="100%" creationComplete="init(event)" removedFromStage="onRemoved(event)">
	<fx:Script>
		<![CDATA[
			import com.mightybits.hack.bubblepop.core.AppModel;
			import com.mightybits.hack.bubblepop.view.game.GameContainer;
			import com.mightybits.hack.bubblepop.view.game.GameView;
			
			import mx.events.FlexEvent;
			
			import net.hires.debug.Stats;
			
			import starling.core.Starling;
			
			private var _game:GameView;
			
			private static var _starling:Starling;
			
			protected function init(event:FlexEvent):void
			{
				
				Starling.multitouchEnabled = true;  // useful on mobile devices
				Starling.handleLostContext = false; // not necessary on iOS. Saves a lot of memory!
							
				if(!_starling)
				{
					_starling = new Starling(GameContainer, stage, AppModel.getViewPort());
				}	
				
				addEventListener(Event.ENTER_FRAME, onEnterFrame);
			
				
				
				debug.addChild(new Stats());
			}
			
			protected function onRemoved(event:Event):void
			{
				if(_starling)
				{
					(_starling.root as GameContainer).removeGame();
					_starling.stop();
					_starling.dispose();
				}		
			}
			
			protected function onEnterFrame(event:Event):void
			{
				if(_starling.root)
				{
					removeEventListener(Event.ENTER_FRAME, onEnterFrame);
					
					_starling.start();
					
					(_starling.root as GameContainer).createGame();
				}
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
