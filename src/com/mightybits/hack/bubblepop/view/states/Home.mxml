<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" width="100%" height="100%">
	
	<fx:Script>
		<![CDATA[
			import com.mightybits.hack.bubblepop.core.AppController;
			
			protected function playGame(event:MouseEvent):void
			{
				AppController.instance.changeState("game");
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:Label horizontalCenter="0" top="130" text="Bubble Pop" fontSize="45" />
	
	<s:VGroup horizontalCenter="0" verticalCenter="0">
		<s:Button label="PLAY" width="240" fontSize="40" height="100" click="playGame(event)" />
	</s:VGroup>
	
</s:Group>